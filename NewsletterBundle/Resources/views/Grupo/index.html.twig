{% extends 'JetNewsletterBundle::layout.html.twig' %}
{% set active = 'grupos' %}
{% block header %}<h1>Grupos</h1>{% endblock %}
{% block main %}

<table class="table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Fecha de creación</th>
            <th>Ult. Modificación</th>
            <th>Miembros</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.title }}</td>
            <td>{{ entity.description }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.getCountSuscribers() }}</td>
            <td>
                <a class="btn" href="{{ path('grupos_show', { 'id': entity.id }) }}">ver</a>
                <a class="btn" href="{{ path('grupos_edit', { 'id': entity.id }) }}">editar</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

        <a class="btn success large" href="{{ path('grupos_new') }}">
            Nuevo Grupo
        </a>

{% endblock %}