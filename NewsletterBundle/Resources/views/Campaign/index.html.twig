{% extends 'JetNewsletterBundle::layout.html.twig' %}
{% set active = 'campaigns' %}
{% block header %}<h1>Campañas</h1><small>Seguimiento</small>{% endblock %}
{% block main %}

<table class="table-striped">
    <thead>
        <tr>
            <th>nº</th>
            <th>Título</th>
            <th>Plantilla</th>
	    <th>Progreso</th>
            <th>Estado</th>
            <th>Fecha de inicio</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('campanas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.template }}</td>
	    <td><div class="progress">
  <div class="bar" style="width: 60%;"></div>
</div></td>
            <td>{{ entity.getTextStatus() }}</td>
            <td>{% if entity.startsat %}{{ entity.startsat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
               
                        <a class="btn" href="{{ path('campanas_show', { 'id': entity.id }) }}">ver</a>
                   
                        <a class="btn" href="{{ path('campanas_edit', { 'id': entity.id }) }}">editar</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

        <a class="btn success" href="{{ path('campanas_new') }}">
            Nueva Campaña
        </a>
{% endblock %}
