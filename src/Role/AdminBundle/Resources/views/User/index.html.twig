{% extends 'RoleAdminBundle::layout.html.twig' %}
{% block panel %}
<h1>Lista de usuarios</h1> 
<table class="table table-striped">
<thead>
	<th>Alias</th>
	<th>Email</th>
	<th>Estado</th>
</thead>
{% for entity in entities %}
<tr>
	<td>{{ entity.username }}</td>
	<td>{{ entity.email }}</td>
	<td>{% if entity.enabled == true %}<span class="label label-success">ACTIVO</span>{% else %}<span class="label label-warning">INACTIVO</span>{% endif %}</td>
</tr>
{% endfor %}
</table>
{% endblock %}