{% extends 'RoleAdminBundle::layout.html.twig' %}
{% block panel %}
<h1>Lista de locales</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.localname }}</td>
            <td>{{ entity.email }}</td>
            <td>{% if entity.enabled == true %}<span class="label label-success">ACTIVO</span>{% else %}<span class="label label-warning">INACTIVO</span>{% endif %}</td>
            <td>
                <div class="row">
                    <a href="{{ path('role_admin_local_show', { 'id': entity.id }) }}" class="btn btn-info">info</a>
                	<a href="{{ path('role_admin_local_edit', { 'id': entity.id }) }}" class="btn btn-warning">editar</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="unstyled">
    <li>
        <a href="{{ path('role_admin_local_new') }}" class="btn btn-success">
            Crea un nuevo local
        </a>
    </li>
</ul>
{% endblock %}
