{% extends 'RoleAdminBundle::layout.html.twig' %}
{% block panel %}
<h1>Editar local</h1>

<form action="{{ path('role_admin_local_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-warning">Guardar cambios</button>
    </p>
</form>

<ul class="unstyled">
    <li>
        <a href="{{ path('role_admin_local') }}" class="btn">
            Vuelve a la lista
        </a>
    </li>
    <li>
        <form action="{{ path('role_admin_local_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Borrar</button>
        </form>
    </li>
</ul>
{% endblock %}
