{% extends 'RoleAdminBundle::layout.html.twig' %}
{% block panel %}
<h1>Local</h1>

<table class="table table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Localname</th>
            <td>{{ entity.localname }}</td>
        </tr>
        <tr>
            <th>Localname_canonical</th>
            <td>{{ entity.localnamecanonical }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Email_canonical</th>
            <td>{{ entity.emailcanonical }}</td>
        </tr>
        <tr>
            <th>Enabled</th>
            <td>{% if entity.enabled == true %}<span class="label label-success">ACTIVO</span>{% else %}<span class="label label-warning">INACTIVO</span>{% endif %}</td>
        </tr>
        <tr>
            <th>Comment</th>
            <td>{{ entity.comment }}</td>
        </tr>
        <tr>
            <th>Telephone</th>
            <td>{{ entity.telephone }}</td>
        </tr>
        <tr>
            <th>Latitude</th>
            <td>{{ entity.latitude }}</td>
        </tr>
        <tr>
            <th>Longitude</th>
            <td>{{ entity.longitude }}</td>
        </tr>
        <tr>
            <th>Adress</th>
            <td>{{ entity.adress }}</td>
        </tr>
        <tr>
            <th>Web</th>
            <td>{{ entity.web }}</td>
        </tr>
        <tr>
            <th>Web_canonical</th>
            <td>{{ entity.webcanonical }}</td>
        </tr>
    </tbody>
</table>

<div class="row">
	<a href="{{ path('role_admin_local') }}" class="btn">
    	Vuelve a la lista
    </a>
    <a href="{{ path('role_admin_local_edit', { 'id': entity.id }) }}" class="btn btn-warning">
    	Editar
    </a>
    <form action="{{ path('role_admin_local_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
    	<button type="submit" class="btn btn-danger">Borrar</button>
    </form>
</div>
{% endblock %}
